extends ../layout

block content
  section.bg-light
    .container
      h1.text-center CREATE USER
      form(action="/users" method="POST")
        .row
          .col-12.my-2
            .form-group
              label.my-2(for='fullName') Fullname
              input#fullName.form-control(type='text' name='fullName')
          .col-12.my-2
            .form-group
              label.my-2(for='userName') User Name
              input#userName.form-control(type='text' name='userName' placeholder='Input your name')
          .col-12.my-2
            .form-group
              label.my-2(for='email') Email
              input#email.form-control(type='email' name='email' placeholder='type your mail')
          .col-6.my-2
             .form-group
              label.my-2(for='password') password
              input#password.form-control(type='password' name='password' placeholder='type your password')
          .col-6.my-2
             .form-group
              label.my-2(for='confirm_password') confirm_password
              input#confirm_password.form-control(type='password' name='confirmPassword' placeholder='retype your password')
          .col-12.text-center.mt-3
              button.btn.btn-primary.text-center(type="submit") Submit